<div class="container">
    <div class="row justify-content-center">
        <div class="col-10">
          <%= form_for(resource, as: resource_name, class: "shadow p-3 mb-3 bg-info rounded", url: registration_path(resource_name)) do |f| %>
            <%= render "devise/shared/error_messages", resource: resource %>
            <div class="form-group row">
              <%= f.label :username, class: "col-2 col-form-label text-light "%><br />
              <div class="col-10">
                <%= f.text_field :username, class: "form-control shadow rounded", autofocus: true %>
              </div>
            </div>

            <div class="form-group row mt-3">
                    <%= f.label :email, class: "col-2 col-form-label text-light" %>
                    <div class="col-10"> 
                        <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control shadow rounded" %>
                    </div>
              </div>

              <div class="form-group row mt-3">
                    <%= f.label :password, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.password_field :password, autocomplete: "new-password", class: "form-control shadow rounded" %>
                    </div>
              </div>

              <div class="form-group row mt-3">
                    <%= f.label :password_confirmation, class: "col-2 col-form-label text-light" %>
                    <div class="col-10">
                        <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control shadow rounded" %>
                    </div>
              </div>

              <div class="form-group row mt-3">
                    <%= f.fields_for :billing_address_attributes, resource.build_billing_address do |ba| %>
                      <div>
                        <%= ba.label :street%>
                        <%= ba.text_field :street%>
                      </div>

                      <div>
                        <%= ba.label :city%>
                        <%= ba.text_field :city%>
                      </div>

                      <div>
                        <%= ba.label :state%>
                        <%= ba.text_field :state%>
                      </div>

                      <div>
                        <%= ba.label :country%>
                        <%= ba.text_field :country%>
                      </div>

                      <div>
                        <%= ba.label :pincode%>
                        <%= ba.text_field :pincode%>
                      </div>

                    <% end %>
              </div>

              <div class="form-group row mt-3">
                    <%= f.fields_for :mailing_address_attributes, resource.build_mailing_address do |ma| %>
                      <div>
                        <%= ma.label :street%>
                        <%= ma.text_field :street%>
                      </div>

                      <div>
                        <%= ma.label :city%>
                        <%= ma.text_field :city%>
                      </div>

                      <div>
                        <%= ma.label :state%>
                        <%= ma.text_field :state%>
                      </div>

                      <div>
                        <%= ma.label :country%>
                        <%= ma.text_field :country%>
                      </div>

                      <div>
                        <%= ma.label :pincode%>
                        <%= ma.text_field :pincode%>
                      </div>
                    <% end %>
              </div>

              <div class="form-group row mt-3">
                <%= f.label :image, class: "col-2 col-form-label text-light" %>
                <div class="col-10">
                    <%= f.file_field :image, class: "form-control-file" %>
                </div>
              </div>

              <div class="form-group row justify-content-center">
                    <%= f.submit "Sign up", class: "btn btn-outline-light btn-lg mt-3" %>
              </div>
          <% end %>    
        </div> 
        <div class="mb-3 d-flex justify-content-center">
            <%= render "devise/shared/links", class: "text-info text-center" %>
        </div> 
    </div>
</div>