
<h2 class="text-center"><%= @article.title %></h2>

<div class="container">
        <div class="row justify-content-md-center">
            <div class="col-8 mt-4">
                <div class="card text-center shadow mb-5 bg-white rounded">
                <div class="card-header fst-italic">
                    by - Deepak Tewari
                </div>
                <div class="card-body">
                    <div class="card-text"><%= simple_format(@article.description) %></div>
                    <%= link_to "Comment", new_article_comment_path(@article), class: "btn btn-outline-success"%>
                    <%= link_to "Edit", edit_article_path(@article), class: "btn btn-outline-info"%>
                    <%= link_to "Delete", article_path(@article), data: {turbo_method: :delete, turbo_confirm: "Are you sure?"}, class: "btn btn-outline-danger" %>
                    <%= link_to "Return", articles_path, class: "btn btn-outline-secondary"%>
                </div>
                <div class="card-footer text-muted">
                    <small>Created <%= time_ago_in_words(@article.created_at) %> ago,
                    edited <%= time_ago_in_words(@article.updated_at) %> ago</small>
                    <p><%= "#{pluralize(@article.comments.count,'user')} commented on this Article." %></p>
                </div>
                </div>
            </div>
        </div>
</div>


<%= render "comments/comment" %>
