
<h1 class="text-center mt-4">Create new Article</h1>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-10">
      <%= render "shared/errors" %>
      <%= form_with(model: [@article.author,@article], url: user_articles_path(current_user), class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :title, class: "col-2 col-form-label text-light" %>
          <div class="col-10">
            <%= f.text_field :title, class: "form-control shadow rounded", placeholder: "Title of article" %>
          </div>
        </div>

        <div class="form-group row mt-3">
          <%= f.label :description, class: "col-2 col-form-label text-light" %>
          <div class="col-10"> 
            <%= f.text_area :description, rows: 10, class: "form-control shadow rounded", placeholder: "Description of article" %>
          </div>
        </div>

        <div class="form-group row mt-3">
            <%= f.label :image, class: "col-2 col-form-label text-light" %>
            <div class="col-10">
                <%= f.file_field :image, class: "form-control-file" %>
            </div>
        </div>

        <div class="form-group row justify-content-center">
          <%= f.submit class: "btn btn-outline-light btn-lg mt-3" %>
        </div>
      <% end %>
    </div>

    <div class="mb-3 d-flex justify-content-center">
      <%= link_to '[ Cancel and return to articles listing ]', user_articles_path(current_user), class: "text-info text-center" %>
    </div> 
  </div>
</div>
